<div class="d-flex justify-content-center mt-5">
  <span class="fs-1">MapleStory_Raiders</span>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="d-flex justify-content-center">
      <a href="/mapleStorys/new">
      <button type="submit" class="btn btn-primary btn-lg">create</button>
      </a>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <ul class="list-group">
      {{#each maples}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto mr-auto">
            <a href="{{this.url}}" class="text-dark fs-3">
              <h4>
                {{this.name}}
              </h4>
              </a>
            </div>
            <div class="col-auto ms-auto">
              <a class="btn btn-secondary" href="./mapleStorys/{{ this._id }}"> detail </a>
              <a class="btn btn-success" href="./mapleStorys/{{ this._id }}/edit"> edit </a>
              <form action="./mapleStorys/{{ this._id }}?_method=DELETE" method="post" style="display: inline;">
                <button class="btn btn-danger" type="submit"> delete </button>
              </form>
            </div>
          </div>
        </li>
      {{/each}}
      </ul>
    </div>
  </div>
</div>