<div class="d-flex justify-content-center mt-5">
  <span class="fs-1">MapleStory_Raiders</span>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="d-flex justify-content-center">
      <a href="/mapleStorys/new">
      <button type="submit" class="btn btn-primary btn-lg">create</button>
      </a>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <ul>
      {{#each maples}}
        <li>
          <a href="{{this.url}}" class="text-dark fs-3">{{this.name}}</a>
          <a href="./mapleStorys/{{ this._id }}"> detail </a>
          <a href="./mapleStorys/{{ this._id }}/edit"> edit </a>
          <form action="./mapleStorys/{{ this._id }}/delete?_method=DELETE" method="post" style="display: inline;">
            <button type="submit"> delete </button>
          </form>
        </li>
      {{/each}}
      </ul>
    </div>
  </div>
</div>